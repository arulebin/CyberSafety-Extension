{
  "manifest_version": 2,
  "name": "CyberSafety Extension",
  "version": "1.0",
  "description": "A Chrome extension for detecting phishing and hate speech",
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}

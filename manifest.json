{
  "manifest_version": 3,
  "name": "CyberSafety Extension",
  "version": "1.0",
  "description": "A Chrome extension for detecting phishing and hate speech",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
